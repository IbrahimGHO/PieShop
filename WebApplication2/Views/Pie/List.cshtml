
@model WebApplication2.ViewModels.PieListViewModel


<html xmlns="http://www.w3.org/1999/xhtml">
    <head><title>Pie Shop</title></head>
<body>
    <h1>@Model.CurrentCategory </h1>

    @foreach (var pie in Model.Pies)
    {
        <div> 
            <h1>Hello </h1>
            <h2>@pie.Name</h2>
            <h3>@pie.Price.ToString("c")</h3>
            <h3>@pie.Category.CategoryName</h3>
        </div>
    }
</body>
</html>